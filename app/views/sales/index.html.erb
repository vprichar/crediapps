<div class="container">
  
  <div class="row">
    <div class="col s12 right-align menu-top"> 
      <a href="sales/new" class="waves-effect waves-light btn">
        <i class="material-icons left">note_add</i>
        Nueva venta
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <table class="striped">
            <thead>
              <tr>
                <th>Folio</th>
                <th>Clave cliente</th>
                <th>Nombre</th>
                <th>Total</th>
                <th>Status</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @sales.each do |sale| %>
                <tr class="table-lik" onclick="document.location = 'sales/<%= sale.id %>';">
                  <td><%= sale.id %></td>
                  <td><%= sale.client.id%></td>
                  <td><%= sale.client.name %></td>
                  <td><%= sale.toal %></td>
                  <td><%= sale.status %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
