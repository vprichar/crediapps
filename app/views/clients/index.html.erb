<div class="container">
  <div class="row">
    <div class="col s12 right-align add-cart">
      <a class="waves-effect waves-light btn" href="/clients/new">Cliente nuevo</a>
    </div>
  </div>
  <h1>Listado de clientes</h1>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Rfc</th>
        <th>Telefono</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.rfc %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td><%= link_to 'Ver', client %></td>
          <td><%= link_to 'Editar', edit_client_path(client) %></td>
          <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


