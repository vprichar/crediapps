<div class="container">
  <div class="row">
    <div class="col s12 right-align add-cart">
      <a class="waves-effect waves-light btn" href="/configuracions/new">Nueva configuracion</a>
    </div>
  </div>
    <h1>Configuracio</h1>
    <table>
      <thead>
        <tr>
          <th>Tasa de financiamiento rate</th>
          <th>Fecha tope</th>
          <th>Enganche</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @configuracions.each do |configuracion| %>
          <tr>
            <td><%= configuracion.financing_rate %></td>
            <td><%= configuracion.deadline %></td>
            <td><%= configuracion.hitch %></td>
            <td><%= link_to 'Show', configuracion %></td>
            <td><%= link_to 'Edit', edit_configuracion_path(configuracion) %></td>
            <td><%= link_to 'Destroy', configuracion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>

